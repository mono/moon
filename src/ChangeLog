	* animation.cpp, animation.h, brush.cpp, brush.h, clock.cpp, clock.h,
	  collection.cpp, collection.h, dependencyobject.h, downloader.cpp,
	  downloader.h, Makefile.am, media.cpp, media.h, runtime.cpp, runtime.h,
