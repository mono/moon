<Canvas
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Width="100" Height="200">
	
	<Rectangle Width="100" Height="200" Canvas.Left="0" Canvas.Top="0" Fill="DarkBlue" />

	<Path Width="100" Height="100" Canvas.Left="0" Canvas.Top="0" Stretch="Fill" Data="F1 M 0,0L 100,0L 100,10L 50,5L 0,10">
		<Path.Fill>
			<LinearGradientBrush SpreadMethod="Reflect" StartPoint="0,0" EndPoint="1,1">
				<LinearGradientBrush.GradientStops>
					<GradientStop Color="White" Offset="0.0" />
					<GradientStop Color="Red" Offset="1.0" />
				</LinearGradientBrush.GradientStops> 
			</LinearGradientBrush>
		</Path.Fill>
	</Path>
 
</Canvas>
