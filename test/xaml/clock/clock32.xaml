<Canvas xmlns="http://schemas.microsoft.com/client/2007"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Width="640" Height="260">

	<Canvas.Triggers>
		<EventTrigger RoutedEvent="Canvas.Loaded">
			<BeginStoryboard>
				<Storyboard AutoReverse="true">
					<DoubleAnimation x:Name="right" Storyboard.TargetName="rect" Storyboard.TargetProperty="(Canvas.Left)" By="0" Duration="00:00:1"/>
					<DoubleAnimation x:Name="right" Storyboard.TargetName="rect" Storyboard.TargetProperty="(Canvas.Left)" By="500" BeginTime="00:00:1" Duration="00:00:0.2"/>
					<DoubleAnimation x:Name="down" Storyboard.TargetName="rect" Storyboard.TargetProperty="(Canvas.Top)" By="100" BeginTime="00:00:1.2" Duration="00:00:0.2"/>
				</Storyboard>
			</BeginStoryboard>
		</EventTrigger>
	</Canvas.Triggers>

		<Rectangle x:Name="measure1" Canvas.Left="10" Canvas.Top="7" Width="600" Height="3" Fill="Black" />
		<Rectangle x:Name="measure2" Canvas.Left="10" Canvas.Top="110" Width="500" Height="3" Fill="Black" />
		<Rectangle x:Name="measure3" Canvas.Left="610" Canvas.Top="7" Width="3" Height="203" Fill="Black" />
		<Rectangle x:Name="measure4" Canvas.Left="507" Canvas.Top="110" Width="3" Height="100" Fill="Black" />
		<Rectangle x:Name="rect" Canvas.Left="10" Canvas.Top="10" Width="100" Height="100" Fill="Red" />

	<TextBlock x:Name="description" Canvas.Left="20" Canvas.Top="140" Width="600" Height="100">
		<Run Text="When the rectangle stops it should be aligned with the guides."/>
	</TextBlock>
</Canvas>
